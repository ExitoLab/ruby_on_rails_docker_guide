<%= form_with(model: todo, class: 'container mt-4') do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h4>

      <ul class="list-unstyled">
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= form.check_box :completed, class: 'form-check-input' %>
    <%= form.label :completed, class: 'form-check-label' %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
